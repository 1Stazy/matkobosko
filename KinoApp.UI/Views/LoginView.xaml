<Window x:Class="KinoApp.UI.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie"
        Width="420" Height="320"
        WindowStartupLocation="CenterScreen"
        Background="#121212"
        Foreground="White"
        ResizeMode="NoResize">

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="KinoApp — logowanie"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0 0 0 12"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Width="340">
            <TextBlock Text="Login" Margin="0 2"/>
            <TextBox x:Name="LoginBox" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" Height="32" Padding="6" Background="#1A1A1A" BorderBrush="#333" Foreground="White"/>

            <TextBlock Text="Hasło" Margin="12 12 0 2"/>
            <PasswordBox x:Name="PasswordBox" Height="32" Padding="6" Background="#1A1A1A" BorderBrush="#333" Foreground="White"/>

            <!-- wiązanie PasswordBox do VM realizujemy w code-behind (bezpieczne) -->
            <Button Content="Zaloguj"
                    Height="36"
                    Margin="0 18 0 0"
                    Command="{Binding LoginCommand}"
                    HorizontalAlignment="Stretch"/>

            <TextBlock Text="{Binding LoginMessage}" Foreground="#FFB86B" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
