<UserControl x:Class="KinoApp.UI.Controls.FilmCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="180" Height="300">
    
    <Border CornerRadius="12" Background="#1E1E1E" Padding="6"
            Effect="{StaticResource CardShadow}">
        <StackPanel>
            <Image Source="{Binding PlakatPath}"
                   Height="220"
                   Stretch="UniformToFill"
                   Margin="0,0,0,8"
                   ClipToBounds="True"/>
            
            <TextBlock Text="{Binding Tytul}"
                       Foreground="White"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       FontSize="16"/>

            <TextBlock Text="{Binding Gatunek}"
                       Foreground="#B0B0B0"
                       FontSize="12"/>
        </StackPanel>
    </Border>
</UserControl>
