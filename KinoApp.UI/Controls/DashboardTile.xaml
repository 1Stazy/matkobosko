<UserControl x:Class="KinoApp.UI.Controls.DashboardTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="140" Width="260">

    <Border x:Name="TileBorder"
            Background="#1E1E1E"
            CornerRadius="12"
            Padding="16"
            RenderTransformOrigin="0.5,0.5">

        <Border.RenderTransform>
            <ScaleTransform x:Name="Scale" ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>

        <!-- JEDEN StackPanel zawiera wszystko -->
        <StackPanel>
            <!-- IKONA -->
            <TextBlock Text="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="30"
                       Margin="0,0,0,8"
                       Foreground="White"/>

            <!-- TYTUÅ -->
            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"/>

            <!-- OPIS -->
            <TextBlock Text="{Binding Description, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Opacity="0.7"
                       Foreground="White"
                       FontSize="13"/>
        </StackPanel>

    </Border>

    <!-- ANIMACJE HOVER -->
    <UserControl.Triggers>

        <EventTrigger RoutedEvent="MouseEnter">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="Scale"
                                     Storyboard.TargetProperty="ScaleX"
                                     To="1.05" Duration="0:0:0.15"/>

                    <DoubleAnimation Storyboard.TargetName="Scale"
                                     Storyboard.TargetProperty="ScaleY"
                                     To="1.05" Duration="0:0:0.15"/>

                    <ColorAnimation Storyboard.TargetName="TileBorder"
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                    To="#2A2A2A"
                                    Duration="0:0:0.15"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

        <EventTrigger RoutedEvent="MouseLeave">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="Scale"
                                     Storyboard.TargetProperty="ScaleX"
                                     To="1" Duration="0:0:0.15"/>

                    <DoubleAnimation Storyboard.TargetName="Scale"
                                     Storyboard.TargetProperty="ScaleY"
                                     To="1" Duration="0:0:0.15"/>

                    <ColorAnimation Storyboard.TargetName="TileBorder"
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                    To="#1E1E1E"
                                    Duration="0:0:0.15"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

    </UserControl.Triggers>

</UserControl>
