<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="Color.BackgroundDark">#121212</Color>
    <Color x:Key="Color.PanelDark">#1A1A1A</Color>
    <Color x:Key="Color.PanelDarker">#0F0F0F</Color>
    <Color x:Key="Color.Accent">#D81B60</Color>
    <Color x:Key="Color.TextPrimary">#E0E0E0</Color>
    <Color x:Key="Color.TextSecondary">#B0B0B0</Color>

    <SolidColorBrush x:Key="Brush.BackgroundDark" Color="{StaticResource Color.BackgroundDark}"/>
    <SolidColorBrush x:Key="Brush.PanelDark" Color="{StaticResource Color.PanelDark}"/>
    <SolidColorBrush x:Key="Brush.PanelDarker" Color="{StaticResource Color.PanelDarker}"/>
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent}"/>
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource Color.TextPrimary}"/>
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="{StaticResource Color.TextSecondary}"/>

</ResourceDictionary>
