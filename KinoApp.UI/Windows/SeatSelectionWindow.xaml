<Window x:Class="KinoApp.UI.Views.SeatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:KinoApp.UI.Controls"
        Title="WybÃ³r miejsc" Height="700" Width="1000" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Naglowek}" FontSize="16" FontWeight="Bold" Margin="10" Foreground="White"/>

        <controls:SeatMapControl Grid.Row="1" Seats="{Binding SeatViewModels}" Columns="12" />

